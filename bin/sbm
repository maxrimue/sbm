#!/bin/bash
#A simple package manager for user binaries

if [ -z "$1" -o -z "$2" ]; then
 echo "Not enough arguments, see --help or -h for help."
 exit
fi

if [ -z "$3" ]; then
 THIRDVALUE=false
else
 THIRDVALUE=true
fi

if [ $1 = "-i" ]; then

 if [ -e $2 ]; then
  if [ -e /usr/local/bin/$2 ]; then
   echo "$2 already is installed. Please use -u to update the installed version with the local one."
  else 
   echo "Installing $2..."
   sudo cp $2 /usr/local/bin/
   echo "Complete."
  fi
 else
  echo "$2 is not a binary, aborting."
 fi

elif [ $1 = "-d" -o $1 = "-r" ]; then

 if [ -e /usr/local/bin/$2 ]; then
  echo "Removing $2..."
  sudo rm -r /usr/local/bin/$2
  echo "Complete."
 else
  echo "No installed binary with the name $2 found, aborting."
 fi 

elif [ $1 = "-u" ]; then
 echo "Updating $2..."
 if [ -e /usr/local/bin/$2 ]; then
  if [ -e $2 -a $THIRDVALUE = false ]; then
   sudo rm -r /usr/local/bin/$2
   sudo cp $2 /usr/local/bin/$2
   echo "Complete."
  elif [ -e $3 -a $THIRDVALUE = true ]; then
   echo "Replacing installed $2 with newer $3..."
   sudo rm -r /usr/local/bin/$2
   sudo cp $3 /usr/local/bin/$3
  else
   echo "No local file named $2 found, aborting."
  fi
 else
  echo "$2 is not installed. Please use -i to install."
 fi

elif [ $1 = "--help" -o  $1 = "-h" ]; then
 echo "sbm -i <bin>		Installs binary"
 echo ""
 echo "sbm -r <bin>		Removes instaled binary"
 echo "sbm -d <bin>		"
 echo ""
 echo "sbm -u <bin>		Updates installed binary"
 echo ""
 echo "sbm -u <bin> <new bin>	Replaces installed binary with new binary"

else
 echo "Command not found, see --help or -h for help."
fi
